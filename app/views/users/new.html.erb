<h1>Sign Up</h1>

<%= link_to "homepage", users_path %>

<%= form_for @user do |f| %>
  <% if @user.errors.any? %>
    <div class="error-msgs">
      <h2>Form submission failed:</h2>
      <ul>
        <% @user.errors.full_messages.each do |msg| %>
          <li><%=  msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  <p>
    <%= f.label :username %>:<br>
    <%= f.text_field :username %>
  </p>
  <p>
    <%= f.label :password %>:<br>
    <%= f.password_field :password %>
  </p>
  <p>
    <%= f.label :confirm_password %>:<br>
    <%= f.password_field :password_confirmation %>
  </p>
  <p>
    <%= f.label :avatar %>:<br>
    <%= f.file_field :avatar %>
  </p>
  <p class="button"><%= f.submit %></p>
<% end %>

